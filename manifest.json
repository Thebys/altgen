{
  "manifest_version": 2,
  "name": "AltGen",
  "version": "0.1.0",
  "description": "AI-powered alt text generator for WordPress images",
  "browser_specific_settings": {
    "gecko": {
      "id": "altgen@iver.cz"
    }
  },
  "icons": {
    "48": "icons/altgen-48.png",
    "96": "icons/altgen-96.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "contextMenus",
    "downloads",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/altgen-19.png",
      "38": "icons/altgen-38.png",
      "48": "icons/altgen-48.png",
      "96": "icons/altgen-96.png"
    },
    "default_title": "AltGen",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
} 